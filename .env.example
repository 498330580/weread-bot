# Flask 配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# 时区配置
TZ=Asia/Shanghai

# CURL 命令配置（选择其一）
# 方式1：直接设置CURL字符串
WEREAD_CURL_STRING=curl 'https://weread.qq.com/web/book/read' -H 'cookie: wr_skey=...' --data-raw '{...}'

# 方式2：使用文件路径
# WEREAD_CURL_BASH_FILE_PATH=curl_command.txt

# 应用配置
STARTUP_MODE=immediate
STARTUP_DELAY=60-300

# 阅读配置
READING_MODE=smart_random
TARGET_DURATION=60-70
READING_INTERVAL=25-35

# 网络配置
NETWORK_TIMEOUT=30
RETRY_TIMES=3
RETRY_DELAY=5-15
RATE_LIMIT=10

# 人类模拟配置
HUMAN_SIMULATION_ENABLED=true
READING_SPEED_VARIATION=true
BREAK_PROBABILITY=0.15
BREAK_DURATION=30-180
ROTATE_USER_AGENT=false

# 通知配置（多选）
NOTIFICATION_ENABLED=true
INCLUDE_STATISTICS=true

# PushPlus 通知
# PUSHPLUS_TOKEN=your_pushplus_token

# Telegram 通知
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id
# HTTP_PROXY=http://proxy_host:port
# HTTPS_PROXY=https://proxy_host:port

# WxPusher 通知
# WXPUSHER_SPT=your_wxpusher_spt

# 飞书通知
# FEISHU_WEBHOOK_URL=your_feishu_webhook_url
# FEISHU_MSG_TYPE=text

# 企业微信通知
# WEWORK_WEBHOOK_URL=your_wework_webhook_url
# WEWORK_MSG_TYPE=text

# 钉钉通知
# DINGTALK_WEBHOOK_URL=your_dingtalk_webhook_url
# DINGTALK_MSG_TYPE=text

# Bark 通知（iOS）
# BARK_SERVER=https://api.day.app
# BARK_DEVICE_KEY=your_device_key
# BARK_SOUND=default

# Ntfy 通知
# NTFY_SERVER=https://ntfy.sh
# NTFY_TOPIC=your_topic_name
# NTFY_TOKEN=your_token

# Gotify 通知
# GOTIFY_SERVER=https://gotify.example.com
# GOTIFY_TOKEN=your_gotify_token
# GOTIFY_PRIORITY=5
# GOTIFY_TITLE=WeRead Bot

# Server酱³
# SERVERCHAN3_UID=your_uid
# SERVERCHAN3_SENDKEY=your_sendkey
# SERVERCHAN3_TAGS=tag1|tag2
# SERVERCHAN3_SHORT=short_description

# PushDeer
# PUSHDEER_PUSHKEY=your_pushkey
# PUSHDEER_TYPE=markdown

# Apprise 通知
# APPRISE_URL=discord://webhook_id/webhook_token

# 定时任务配置
SCHEDULE_ENABLED=false
CRON_EXPRESSION=0 */2 * * *
TIMEZONE=Asia/Shanghai

# 守护进程配置
DAEMON_ENABLED=false
SESSION_INTERVAL=120-180
MAX_DAILY_SESSIONS=12

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE=logs/weread.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_CONSOLE=true

# Hack 配置
HACK_COOKIE_REFRESH_QL=false
